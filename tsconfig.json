{
	"compilerOptions": {
		"strict": true,
		"sourceMap": true,
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@src/*": [
				"./src/*"
			]
		},
		"noEmit": true
	},

	"include": [
		"src/**/*.ts",
		"types/**/*.d.ts"
	]
}